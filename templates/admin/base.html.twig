<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}Admin | SantéPlus{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <header class="navbar">
        <h1><a href="{{ path('admin_dashboard_index') }}">Admin SantéPlus</a></h1>
        <nav>
            <ul>
                <li><a href="{{ path('admin_dashboard_index') }}">Dashboard</a></li>
                <li><a href="{{ path('admin_medecin_index') }}">Médecins</a></li>
                <li><a href="{{ path('admin_patient_index') }}">Patients</a></li>
                <li><a href="{{ path('admin_rendezvous_index') }}">Rendez-vous</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-message flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </div>
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>