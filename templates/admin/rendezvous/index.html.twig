{% extends 'admin/base.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
    <h1>RendezVous index</h1>

    <a href="{{ path('admin_rendezvous_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Medecin</th>
                <th>Patient</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vous %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
                <td>{{ rendez_vou.heure ? rendez_vou.heure|date('H:i:s') : '' }}</td>
                <td>{{ rendez_vou.medecin.nom }} ({{ rendez_vou.medecin.specialite }})</td> {# Display nom and specialite #}
                <td>{{ rendez_vou.patient.nom }} {{ rendez_vou.patient.prenom }}</td> {# Assuming patient has nom and prenom #}
                <td>
                    <a href="{{ path('admin_rendezvous_show', {'id': rendez_vou.id}) }}">show</a>
                    <a href="{{ path('admin_rendezvous_edit', {'id': rendez_vou.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
