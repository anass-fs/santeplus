{% extends 'admin/base.html.twig' %}

{% block title %}RendezVous{% endblock %}

{% block body %}
    <h1>RendezVous</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rendez_vou.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ rendez_vou.heure ? rendez_vou.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Medecin</th>
                <td>{{ rendez_vou.medecin.nom }} ({{ rendez_vou.medecin.specialite }})</td>
            </tr>
            <tr>
                <th>Patient</th>
                <td>{{ rendez_vou.patient.nom }} {{ rendez_vou.patient.prenom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_rendezvous_index') }}">back to list</a>

    <a href="{{ path('admin_rendezvous_edit', {'id': rendez_vou.id}) }}">edit</a>

